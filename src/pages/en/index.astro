		<section class="meet-the-team-section" aria-labelledby="meet-our-team-title">
			<div class="meet-the-team-section__inner container">
				<h2 class="meet-the-team-section__title" id="meet-our-team-title">
					{content.home.team.title}
				</h2>
				<h3 class="meet-the-team-section__subtitle">
					{content.home.team.subtitle}
				</h3>
				<div class="meet-the-team-section__content">
					<!--  
					<a href={getRelativeLocaleUrl(lang, content.routes.about)} data-team="mirva" class="meet-the-team-section__card meet-the-team-section__card--link">
						<div class="meet-the-team-section__card-image">
							<Image src={mirvaImage} alt="Mirvat - team medlem" width={180} height={300} loading={'lazy'} class:list={['image-one']} />
						</div>
						<div class="meet-the-team-section__card-content content-one">
							<h3 class="meet-the-team-section__card-title">
