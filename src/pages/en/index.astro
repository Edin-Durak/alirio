<script>
	// Hero image swap for faster loading
	document.addEventListener('DOMContentLoaded', () => {
		const heroImageElement = document.getElementById('hero-image');
		if (heroImageElement) {
			const actualSrc = heroImageElement.getAttribute('data-actual-src');
			if (actualSrc) {
				// Preload the actual hero image
				const actualImage = new Image();
				actualImage.onload = () => {
									// Swap the src when the actual image is loaded
				(heroImageElement as HTMLImageElement).src = actualImage.src;
				};
				actualImage.src = actualSrc;
			}
		}

				// Handle team card navigation
				const teamCards = document.querySelectorAll('.meet-the-team-section__card--link');
		teamCards.forEach(card => {
			card.addEventListener('click', (e) => {
				const teamMember = card.getAttribute('data-team');
				const isMobile = window.innerWidth < 992;
				
				if (teamMember) {
					if (isMobile) {
						// For mobile/tablet: navigate with hash for scroll positioning
						window.location.href = `/en/about#team-${teamMember}`;
					} else {
						// For desktop: navigate without hash to avoid layout shift
						window.location.href = `/en/about`;
						
						// Store the team member in sessionStorage for desktop tab switching
						sessionStorage.setItem('selectedTeamMember', teamMember);
					}
				}
			});
		});
	});
</script>
