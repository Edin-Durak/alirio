					{content.home.benefits.subtitle}				
				</h3>

				<div class="our-benefits-section__content">
					<div class="our-benefits-section__item">
						<div class="our-benefits-section__item-icon">
							<Image src={peopleIcon} alt="people icon" width={51} height={45} loading={'lazy'} />
						</div>
						<div class="our-benefits-section__item-content">
							<h3 class="our-benefits-section__item-title">
								{content.home.benefits.abilities.title}
							</h3>
							<p class="our-benefits-section__item-description">
								{content.home.benefits.abilities.description}
							</p>
						</div>
					</div>
					<div class="our-benefits-section__item">
						<div class="our-benefits-section__item-icon">
							<Image src={chartIconOne} alt="chart icon" width={44} height={44} loading={'lazy'} />
						</div>
						<div class="our-benefits-section__item-content">
							<h3 class="our-benefits-section__item-title">
								{content.home.benefits.rehabilitative.title}
							</h3>
