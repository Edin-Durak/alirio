---
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import Layout from '../../layouts/Layout.astro';
import { Image } from "astro:assets";
import heroImagePlaceholder from '../../assets/images/hero-img.webp';
import heroImage from '../../assets/images/hero-img.png';
import heroLineIcon from '../../assets/images/icons/hero-line-icon.svg';
import certificateImage from '../../assets/images/certificate-img.webp';
import folderIcon from '../../assets/images/icons/folder-icon.svg';
import boardIcon from '../../assets/images/icons/board-icon.svg';
import chartIconOne from '../../assets/images/icons/chart-one-icon.svg';
import chartIconTwo from '../../assets/images/icons/chart-two-icon.svg';
import archiveIcon from '../../assets/images/icons/archive-icon.svg';
import peopleIcon from '../../assets/images/icons/people-icon.svg';
import mirzaImage from '../../assets/images/mirza-img.webp';
import ulfImage from '../../assets/images/ulf-img.webp';
import mirvaImage from '../../assets/images/mirva-img.jpg';
import serviceCardImageOne from '../../assets/images/card-one.webp';
import serviceCardImageTwo from '../../assets/images/card-two.webp';
import serviceCardImageThree from '../../assets/images/card-three.webp';
import arrowUpIcon from '../../assets/images/icons/arrow-up-right-icon.svg';
import arrowUpHoverIcon from '../../assets/images/icons/arrow-up-right-hover-icon.svg';
import FAQ from '../../components/FAQ.astro';
import mirzaAvatarImage from '../../assets/images/mirza-avatar-img.webp';
import ulfAvatarImage from '../../assets/images/ulf-avatar-img.webp';
