---
export interface Props {
	title?: string;
	description?: string;
	keywords?: string;
	ogImage?: string;
}

const { 
	title = "Alirio Omsorg - Compassionate Home Care Services",
	description = "Alirio Omsorg provides compassionate home care services with multilingual staff. We offer rehabilitative care, genuine closeness, and support from the start. 150+ satisfied residents.",
	keywords = "home care, Alirio Omsorg, rehabilitative care, multilingual staff, Swedish home care, elderly care, home nursing, compassionate care",
	ogImage = "https://edin-durak.github.io/alirio/hero-img.webp"
} = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="icon" type="image/x-icon" href="/favicon.ico" />
		<meta name="generator" content={Astro.generator} />
		<meta name="description" content={description} />
		<meta name="keywords" content={keywords} />
		<meta name="author" content="Alirio Omsorg" />
		<meta name="robots" content="index, follow" />
		<meta name="googlebot" content="index, follow" />
		<meta property="og:title" content={title} />
		<meta property="og:description" content={description} />
		<meta property="og:type" content="website" />
		<meta property="og:url" content="https://edin-durak.github.io/alirio/" />
		<meta property="og:image" content={ogImage} />
		<meta name="twitter:card" content="summary_large_image" />
		<meta name="twitter:title" content={title} />
		<meta name="twitter:description" content={description} />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
