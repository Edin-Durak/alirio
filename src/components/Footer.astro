---
import { Image } from "astro:assets";
import logoImage from "../assets/images/alirio-logo.png";

// Get current page path
const currentPath = Astro.url.pathname;
---

<footer class="footer">
  <div class="footer__container">
    <!-- Brand Section -->
    <div class="footer__brand">
      <a href="/alirio/" class="footer__logo" aria-label="Alirio logo">
        <Image src={logoImage} alt="Alirio logo" width={86} height={101} class="footer__logo-image" />

      </a>
      <p class="footer__description">
        Alirio gives you best in class support in living like what you dreamed of, with our specialized team feel free to let us deal with everyday joy you need to have.
      </p>
    </div>

    <!-- Company Links -->
    <div class="footer__section">
      <h3 class="footer__section-title">Company</h3>
      <ul class="footer__nav-list">
        <li class="footer__nav-item">
          <a href="/alirio/" class={`footer__nav-link ${currentPath === '/alirio/' || currentPath === '/alirio' ? 'footer__nav-link--active' : ''}`}>Home</a>
        </li>
        <li class="footer__nav-item">
          <a href="/alirio/services" class={`footer__nav-link ${currentPath === '/alirio/services' ? 'footer__nav-link--active' : ''}`}>Services</a>
        </li>
        <li class="footer__nav-item">
          <a href="/alirio/about" class="footer__nav-link">About US</a>
        </li>
        <li class="footer__nav-item">
          <a href="/alirio/pricing" class="footer__nav-link">Pricing</a>
        </li>
      </ul>
    </div>

    <!-- Help Links -->
    <div class="footer__section">
      <h3 class="footer__section-title">Help</h3>
      <ul class="footer__nav-list">
        <li class="footer__nav-item">
          <a href="/alirio/contact" class="footer__nav-link">Contact Us</a>
        </li>
        <li class="footer__nav-item">
          <a href="/alirio/privacy" class="footer__nav-link">Privacy Policy</a>
        </li>
      </ul>
    </div>

    <!-- Contact Form -->
    <div class="footer__section">
      <h3 class="footer__section-title">Contact</h3>
      <a href="tel:+923123456789" class="footer__contact-link">+92 312 345 6789</a>
    </div>
  </div>

  <!-- Copyright -->
  <div class="footer__copyright">
    <p class="footer__copyright-text">
      Â© Copyright 2025, Designed and developed by 
      <a href="https://www.linkedin.com/in/asad-halilovic/" target="_blank" rel="noopener noreferrer" class="footer__copyright-link">Asad</a>
      & 
      <a href="https://edin-durak-dev.vercel.app/" target="_blank" rel="noopener noreferrer" class="footer__copyright-link">Edin</a>
    </p>
  </div>
</footer>
