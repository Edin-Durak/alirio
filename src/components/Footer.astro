---
import { Image } from "astro:assets";
import logoImage from "../assets/images/alirio-logo.png";
---

<footer class="footer">
  <div class="footer__container">
    <!-- Brand Section -->
    <div class="footer__brand">
      <a href="/" class="footer__logo" aria-label="Alirio logo">
        <Image src={logoImage} alt="Alirio logo" width={86} height={101} class="footer__logo-image" />

      </a>
      <p class="footer__description">
        Alirio gives you best in class support in living like what you dreamed of, with our specialized team feel free to let us deal with everyday joy you need to have.
      </p>
    </div>

    <!-- Company Links -->
    <div class="footer__section">
      <h3 class="footer__section-title">COMPANY</h3>
      <ul class="footer__nav-list">
        <li class="footer__nav-item">
          <a href="/" class="footer__nav-link footer__nav-link--active">Home</a>
        </li>
        <li class="footer__nav-item">
          <a href="/services" class="footer__nav-link">Services</a>
        </li>
        <li class="footer__nav-item">
          <a href="/about" class="footer__nav-link">About US</a>
        </li>
        <li class="footer__nav-item">
          <a href="/pricing" class="footer__nav-link">Pricing</a>
        </li>
      </ul>
    </div>

    <!-- Help Links -->
    <div class="footer__section">
      <h3 class="footer__section-title">HELP</h3>
      <ul class="footer__nav-list">
        <li class="footer__nav-item">
          <a href="/contact" class="footer__nav-link">Contact Us</a>
        </li>
        <li class="footer__nav-item">
          <a href="/privacy" class="footer__nav-link">Privacy Policy</a>
        </li>
      </ul>
    </div>

    <!-- Contact Form -->
    <div class="footer__section">
      <h3 class="footer__section-title">CONTACT</h3>
      <form class="footer__contact-form">
        <input 
          type="email" 
          class="footer__email-input" 
          placeholder="Let us contact you" 
          required
        />
        <button type="submit" class="footer__submit-btn">
          Submit email
        </button>
      </form>
    </div>
  </div>

  <!-- Copyright -->
  <div class="footer__copyright">
    <p class="footer__copyright-text">
      Â© Copyright 2025, Designed and developed by 
      <a href="#" target="_blank" rel="noopener noreferrer" class="footer__copyright-link">Asad</a>
      & 
      <a href="https://edin-durak-dev.vercel.app/" target="_blank" rel="noopener noreferrer" class="footer__copyright-link">Edin</a>
    </p>
  </div>
</footer>
